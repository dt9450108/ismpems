<div class="modal fade" tabindex="-1" role="dialog" id="device-type-modal">
	<div class="modal-dialog" role="document">
		<div class="modal-content">
			<div class="modal-header">
				<h4 id="dt-title" class="modal-title">新增裝置種類</h4>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div id="dt-body" class="modal-body">
				<div id="device-type-id-field" class="form-group row">
					<label class="col-sm-3 form-control-label text-xs-right">
						<span style="color: red;">*</span>種類編碼
					</label>
					<div class="col-sm-9">
						<input id="device-type-id" type="text" class="form-control boxed" placeholder="" maxlength="3" pattern="[A-Z]{3}" required>
						<span id="device-type-id-msg" class="help-block" style="color: #F44336;"></span>
					</div>
				</div>
				<div class="form-group row">
					<label class="col-sm-3 form-control-label text-xs-right">
						<span style="color: red;">*</span>種類說明
					</label>
					<div class="col-sm-9">
						<input id="device-type-text" type="text" class="form-control boxed" placeholder="" required>
						<span id="device-type-text-msg" class="help-block" style="color: #F44336;"></span>
					</div>
				</div>
			</div>
			<div class="modal-footer">
				<button id="submit-button" type="button" class="btn btn-primary">新增</button>
				<button type="button" class="btn btn-secondary" data-dismiss="modal">取消</button>
			</div>
		</div><!-- /.modal-content -->
	</div><!-- /.modal-dialog -->
</div><!-- /.modal -->
