<div class="card card-block">
	<div class="form-group row">
		<label class="col-sm-2 form-control-label text-xs-right">
			<h4 class="title">
				查詢條件
				<button type="button" id="lent-query-reset-button" class="btn btn-primary btn-sm rounded-s">
					重設條件
				</button>
			</h4>
		</label>
	</div>
	<div class="form-group row">
		<label class="col-sm-2 form-control-label text-xs-right">
			設備種類
		</label>
		<div class="col-sm-4">
			<select id="device-type-select" class="c-select form-control boxed">
				<option value="">全部</option>
			</select>
		</div>
		<label class="col-sm-2 form-control-label text-xs-right">
			借用人
		</label>
		<div class="col-sm-4">
			<select id="member-select" class="c-select form-control boxed">
				<option value="">全部</option>
			</select>
		</div>
	</div>
	<div class="form-group row">
		<label class="col-sm-2 form-control-label text-xs-right">
			借用狀態
		</label>
		<div class="col-sm-4">
			<label>
				<input class="radio" name="lent-status-radio" type="radio" value="all" checked="checked">
				<span>全部</span>
			</label>
			<label>
				<input class="radio" name="lent-status-radio" type="radio" value="back">
				<span>已歸還</span>
			</label>
			<label>
				<input class="radio" name="lent-status-radio" type="radio" value="lent">
				<span>未歸還</span>
			</label>
		</div>
		<label class="col-sm-2 form-control-label text-xs-right">
		</label>
		<div class="col-sm-4">
		</div>
	</div>
</div>

<div class="card card-block">
	<div class="table-responsive">
		<table id="lends-list" class="table-striped table-bordered" cellspacing="0" width="100%">
			<thead>
				<tr>
					<th>種類</th>
					<th>編號</th>
					<th>名稱</th>
					<th>借用人</th>
					<th>借出前位置</th>
					<th>借出時間</th>
					<th>歸還時間</th>
					<th>借出經手人</th>
					<th>歸還經手人</th>
					<th data-orderable="false">備註</th>
				</tr>
			</thead>
		</table>
	</div>
</div>