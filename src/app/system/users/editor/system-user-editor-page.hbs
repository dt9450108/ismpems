---
layout: app/app-layout
pagename: system-user-editor
---
<div class="title-block">
	<h3 class="title">
		編輯系統使用者
	</h3>
</div>
<form id="system-user-query" name="system-user-query">
	<div class="card card-block">
		<div class="form-group row">
			<label class="col-sm-2 form-control-label text-xs-right">
				<span style="color: red;">*</span>帳號或Email
			</label>
			<div class="col-sm-10">
				<select id="user-query-key" class="c-select form-control boxed" required>
					<option value="">選擇系統使用者</option>
				</select>
			</div>
		</div>
		<div class="form-group row">
			<div class="col-sm-10">
			</div>
			<div class="col-sm-2">
				<button type="submit" class="btn btn-primary btn-block">
					查詢
				</button>
			</div>
		</div>
	</div>
</form>

<form id="system-user-editor" name="system-user-editor">
	<input type="hidden" id="user-old-account" value="0"></input>
	<input type="hidden" id="user-old-email" value="0"></input>
	<div class="card card-block">
		<div class="form-group row">
			<label class="col-sm-2 form-control-label text-xs-right">
				<span style="color: red;">*</span>帳號
			</label>
			<div class="col-sm-10">
				<input id="user-account" type="text" class="form-control boxed" minlength="4" placeholder="" required>
				<span id="user-account-help-block" class="help-block">至少4個字元</span>
			</div>
		</div>
		<div class="form-group row">
			<label class="col-sm-2 form-control-label text-xs-right">
				密碼
			</label>
			<div class="col-sm-10">
				<input id="user-password" type="text" class="form-control boxed" minlength="6" placeholder="">
				<span class="help-block">至少6個字元，不更改請留空白</span>
			</div>
		</div>
		<div class="form-group row">
			<label class="col-sm-2 form-control-label text-xs-right">
				<span style="color: red;">*</span>姓名
			</label>
			<div class="col-sm-10">
				<input id="user-name" type="text" class="form-control boxed" placeholder="" required>
			</div>
		</div>
		<div class="form-group row">
			<label class="col-sm-2 form-control-label text-xs-right">
				<span style="color: red;">*</span>Email
			</label>
			<div class="col-sm-10">
				<input id="user-email" type="email" class="form-control boxed" placeholder="" required>
				<span id="user-email-help-block" class="help-block" style="color: #F44336;"></span>
			</div>
		</div>
		<div class="form-group row">
			<div class="col-sm-10">
			</div>
			<div class="col-sm-2">
				<button id="submit-button" type="submit" class="btn btn-primary btn-block">
					儲存
				</button>
			</div>
		</div>
	</div>
</form>