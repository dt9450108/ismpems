---
layout: app/app-layout
pagename: system-user-adder
---
<div class="title-block">
	<h3 class="title">
		新增系統使用者
		<span class="sparkline bar" data-type="bar"></span>
	</h3>
</div>
<form id="system-user-adder" name="system-user-adder">
	<div class="card card-block">
		<div class="form-group row">
			<label class="col-sm-2 form-control-label text-xs-right">
				<span style="color: red;">*</span>帳號
			</label>
			<div class="col-sm-10">
				<input id="user-account" type="text" class="form-control boxed" minlength="4" placeholder="" required>
				<span id="user-account-help-block" class="help-block">至少4個字元</span>
			</div>
		</div>
		<div class="form-group row">
			<label class="col-sm-2 form-control-label text-xs-right">
				<span style="color: red;">*</span>密碼
			</label>
			<div class="col-sm-10">
				<input id="user-password" type="text" class="form-control boxed" minlength="6" placeholder="" required>
				<span class="help-block">至少6個字元</span>
			</div>
		</div>
		<div class="form-group row">
			<label class="col-sm-2 form-control-label text-xs-right">
				<span style="color: red;">*</span>姓名
			</label>
			<div class="col-sm-10">
				<input id="user-name" type="text" class="form-control boxed" placeholder="" required>
			</div>
		</div>
		<div class="form-group row">
			<label class="col-sm-2 form-control-label text-xs-right">
				<span style="color: red;">*</span>Email
			</label>
			<div class="col-sm-10">
				<input id="user-email" type="email" class="form-control boxed" placeholder="" required>
				<span id="user-email-help-block" class="help-block" style="color: #F44336;"></span>
			</div>
		</div>
		<div class="form-group row">
			<div class="col-sm-10">
			</div>
			<div class="col-sm-2">
				<button id="system-user-add-button" type="submit" class="btn btn-primary btn-block" disabled="disabled">
					新增
				</button>
			</div>
		</div>
	</div>
</form>