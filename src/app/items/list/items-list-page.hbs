<div class="card card-block">
	<div class="form-group row">
		<label class="col-sm-2 form-control-label text-xs-right">
			<h4 class="title">
				查詢條件
				<button type="button" id="device-query-reset-button" class="btn btn-primary btn-sm rounded-s">
					重設條件
				</button>
			</h4>
		</label>
	</div>
	<div class="form-group row">
		<label class="col-sm-2 form-control-label text-xs-right">
			設備種類
		</label>
		<div class="col-sm-4">
			<select id="device-type-select" class="c-select form-control boxed">
				<option value="">全部</option>
			</select>
		</div>
		<label class="col-sm-2 form-control-label text-xs-right">
			設備狀態
		</label>
		<div class="col-sm-4">
			<select id="device-status-select" class="c-select form-control boxed">
				<option value="">全部</option>
			</select>
		</div>
	</div>
	<div class="form-group row">
		<label class="col-sm-2 form-control-label text-xs-right">
			存放位置
		</label>
		<div class="col-sm-4">
			<select id="device-locations-select" class="c-select form-control boxed">
				<option value="">全部</option>
			</select>
		</div>
	</div>
</div>

<div class="card card-block">
	<div class="table-responsive">
		<table id="devices-list" class="table-striped table-bordered" cellspacing="0" width="100%">
			<thead>
				<tr>
					<th>種類</th>
					<th>編號</th>
					<th>名稱</th>
					<th>位置</th>
					<th>狀態</th>
					<th>產編</th>
					<th>校碼</th>
					<th>序號</th>
					<th>費別名</th>
					<th>品牌</th>
					<th data-orderable="false">裝置序號</th>
					<th>年限</th>
					<th>廠商</th>
					<th>購買日期</th>
					<th>價格</th>
					<th data-orderable="false">規格</th>
					<th data-orderable="false">備註</th>
					<th>最後修改時間</th>
				</tr>
			</thead>
		</table>
	</div>
</div>
